{
	"compilerOptions": {
		"target": "ESNext",
		"module": "node18",
		"outDir": "dist/",
		"rootDir": "src/",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": false,
		"noEmitOnError": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true
	}
}
